# <<<<==git==>>>>
function gad
    git add .
end
function gmt
    git commit $argv
end
function gph
    git push $argv
end
function gfh
    git fetch $argv
end
function gss
    git status $argv
end
function glg
    git log $argv
end
function gam
    git add . && git commit
end
function gpl
    git pull $argv
end
function gme
    git merge $argv
end
# <<<<==chezmoi==>>>>
function ch
    chezmoi $argv
end
function chad
    chezmoi add $argv
end
function chap
    chezmoi apply
end
function ched
    chezmoi edit $argv
end
function chcd
    cd $HOME/.local/share/chezmoi
end
function chup
    chezmoi update 
end
